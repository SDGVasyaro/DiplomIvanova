<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiplomIvanova.Views.Pages.AdditionPage" 
			 xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
			 Title="AdditionPage">
	<Grid RowSpacing="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="0.3*" />
			<ColumnDefinition Width="0.7*" />
		</Grid.ColumnDefinitions>
		<FlexLayout HorizontalOptions="CenterAndExpand" JustifyContent="SpaceAround" AlignContent="SpaceAround" Wrap="Wrap">
			<Button WidthRequest="120" Text="Пункты" Command="{Binding SaveCommand}" />
			<Button WidthRequest="120" Text="ТС" Command="{Binding SaveCommand}" />
			<Button WidthRequest="120" Text="Водители" Command="{Binding SaveCommand}" />
			<Button WidthRequest="120" Text="Рейсы" Command="{Binding SaveCommand}" />
		</FlexLayout>
		<esri:MapView Grid.Column="1" Map="{Binding Map}" GraphicsOverlays="{Binding GraphicsOverlays}" MinimumWidthRequest="100" MinimumHeightRequest="500" x:Name="routeMap" />
	</Grid>
</ContentPage>