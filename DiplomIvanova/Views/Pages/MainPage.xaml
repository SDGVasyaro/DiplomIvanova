<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ent="clr-namespace:DiplomIvanova.DataBase.Entities"
			 xmlns:vm="clr-namespace:DiplomIvanova.ViewModels.MainPage" 
			 xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
			 Title=""
			 x:Class="DiplomIvanova.MainPage"
			 xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials">

	<Grid RowSpacing="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="10">
			<Button Text="Сформировать рейс" Command="{Binding AddRouteCommand}" />
			<Button Grid.Row="1" Text="База данных" Command="{Binding GoToAddCommand}" CommandParameter="TripRequestEntity" />
			<Button Grid.Row="2" Text="Составить накладную" Command="{Binding GoToCommand}" CommandParameter="TripEntity" />
		</HorizontalStackLayout>
		<maps:Map Grid.Row="1" MinimumHeightRequest="500" x:Name="routeMap" MapClicked="routeMap_MapClicked" />
	</Grid>

</ContentPage>
