<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ent="clr-namespace:DiplomIvanova.DataBase.Entities"
			 xmlns:vm="clr-namespace:DiplomIvanova.ViewModels.MainPage" 
			 xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
			 Title=""
			 x:Class="DiplomIvanova.MainPage"
			 xmlns:sensors="clr-namespace:Microsoft.Maui.Devices.Sensors;assembly=Microsoft.Maui.Essentials" 
			 xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013">

	<Grid RowSpacing="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="50" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="10">
			<Button Text="Сформировать рейс" Command="{Binding AddRouteCommand}" WidthRequest="120" FontSize="9"/>
			<Button Grid.Row="1" Text="База данных" Command="{Binding GoToAddCommand}" WidthRequest="90" FontSize="9" CommandParameter="TripRequestEntity" />
			<Button Grid.Row="2" Text="Составить накладную" Command="{Binding GoToCommand}" WidthRequest="150" FontSize="9" CommandParameter="TripEntity" />
		</HorizontalStackLayout>
		<esri:MapView Grid.Row="1" Map="{Binding Map}" GraphicsOverlays="{Binding GraphicsOverlays}" MinimumWidthRequest="100" MinimumHeightRequest="100" x:Name="routeMap" />
	</Grid>

</ContentPage>
